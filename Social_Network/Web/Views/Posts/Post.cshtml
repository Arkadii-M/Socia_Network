@model  DTO.PostsDTO
<div class="container">
    <div class="post">
        <div class="post-header">
            <h1>@Model.Title</h1>
            <div class="post-meta">
                <span class="author">@Model.Author_Id</span>
                <span class="category">@string.Join(",", Model.Tags)</span>
            </div>
        </div>
        <div class="post-content">
            <p>
                @Model.Body
            </p>
        </div>
    </div>

    <div class="Reaction">
        <p>Likes: @Model.Likes.Count</p>
        <p>Dislikes: @Model.Dislikes.Count</p>
        @using (Html.BeginForm("Posts", "Posts", FormMethod.Post))
        {
            @Html.Hidden("Post_Id", Model.Post_Id)
            <input type="submit" value="Like" name="LikeButton" id="123" />
            <input type="submit" value="Dislike" name="DislikeButton" id="12345" />

        }
    </div>
    <div class="Comments">
        @foreach (var comm in Model.Comments)
        {
            <div class="comment-meta">
                <span class="author">@comm.Author_Id</span>
            </div>
            <div class="comment">
                <p>
                    @comm.Comment_Text
                </p>
            </div>

        }
        @using (Html.BeginForm("Posts", "Posts", FormMethod.Post))
        {
            @Html.Hidden("Post_Id", Model.Post_Id)
            <p> <input type="submit" value="Comment" name="CommentButtob" id="12355" /> </p>
        }
    </div>
</div>
